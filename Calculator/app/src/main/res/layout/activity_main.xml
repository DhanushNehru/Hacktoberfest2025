<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F5F5F5">

    <androidx.cardview.widget.CardView
        android:id="@+id/displayCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/displayBg"
            android:padding="24dp">

            <TextView
                android:id="@+id/previousCalculationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#80FFFFFF"
                android:textSize="38sp"
                android:maxLines="1"
                android:gravity="end"/>

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/displayText"
                android:textSize="95sp"
                android:textStyle="bold"
                android:text="0"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="30px"
                android:gravity="end"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/displayCard"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        >

        <GridLayout
            android:columnCount="4"
            android:rowCount="5"
            android:padding="16dp"
            android:background="#FFFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Row 1-->

            <Button
                android:id="@+id/btnClear"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_clear"
                android:text="C" />

            <Button
                android:id="@+id/btnBackspace"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_operator_background"
                android:text="⌫" />

            <Button
                android:id="@+id/btnPercent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_operator_background"
                android:text="%" />

            <Button
                android:id="@+id/btnDevide"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_operator_background"
                android:text="÷" />

            <!-- Row 2 -->

            <Button
                android:id="@+id/btn7"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_background"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_background"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_background"
                android:text="9" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_operator_background"
                android:text="×" />

            <!-- Row 2 -->

            <Button
                android:id="@+id/btn4"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_background"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_background"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_background"
                android:text="6" />

            <Button
                android:id="@+id/btnSubtract"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_operator_background"
                android:text="-" />

            <!-- Row 3 -->

            <Button
                android:id="@+id/btn1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_background"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_background"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_background"
                android:text="3" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_operator_background"
                android:text="+" />

            <!-- Row 4 -->

            <Button
                android:id="@+id/btn0"
                android:layout_rowWeight="1"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_background"
                android:text="0" />

            <Button
                android:id="@+id/btnPoint"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_background"
                android:text="." />

            <Button
                android:id="@+id/btnEqual"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                style="@style/CalculatorButton"
                android:background="@drawable/button_equal_background"
                android:text="=" />

        </GridLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>